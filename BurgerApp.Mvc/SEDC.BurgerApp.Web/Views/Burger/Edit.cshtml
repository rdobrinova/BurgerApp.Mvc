@using SEDC.BurgerApp.BLL.DTOs.Burgers;
@model BurgerDetailsDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsVegetarian" class="control-label"></label>
                <div class="checkbox">
                    <input asp-for="IsVegetarian" type="checkbox" />
                </div>
                <span asp-validation-for="IsVegetarian" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsVegan" class="control-label"></label>
                <div class="checkbox">
                    <input asp-for="IsVegan" type="checkbox" />
                </div>
                <span asp-validation-for="IsVegan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HasFries" class="control-label"></label>
                <div class="checkbox">
                    <input asp-for="HasFries" type="checkbox" />
                </div>
                <span asp-validation-for="HasFries" class="text-danger"></span>
            </div>

            <hr/>

            <div class="form-group">
                <form asp-controller="Burger" asp-action="Edit" method="post">
                    <button class="btn btn-primary">Update</button>
                </form>

                <a class="btn btn-secondary"
                   asp-action="Index">
                    Back to List
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}